.header {
  margin-top: 60rpx;
  width: 670rpx;
  height: 480rpx;
  background: #fff;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.20);
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.header .img {
  height: 160rpx;
  width: 160rpx;
  border-radius: 50%;
  margin-top:40rpx;
}

.header .pay{
  width: 160rpx;
  height: 60rpx;
  background: #BA8E52;
  border-radius: 20px;
  color:#fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  margin-top:30rpx;
}
.header .info{
  font-size: 32rpx;
  color:#666;
  margin-top:50rpx;
}
.tab{
  width: 100%;
  height:216rpx;
  background-color: #fff;
  margin-top:-15rpx;
  padding:0 80rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tab .item image{
  height: 100rpx;
  width: 100rpx;
}
.tab .item view{
  color:#666;
  font-size: 26rpx;
  text-align: center;
}
.coupon{
  width:100%;
  height: 90rpx;
  background-color: #fff;
  padding:0 28rpx;
  box-sizing: border-box;
  margin-top:20rpx;
  color:#666;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.coupon image{
  width: 12rpx;
  height: 22rpx;
}
