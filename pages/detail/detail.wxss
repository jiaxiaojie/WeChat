.banner{
  position:relative;
  width:100%;
  height: 300rpx;
}
.banner .img{
  width:100%;
  height: 100%;
}
.banner .info{
  width: 100%;
  height: 110rpx;
  background: rgba(0,0,0,0.36);
  position:absolute;
  left:0;
  bottom:0;
}
.info text{
  position:absolute;
  color:#fff;
  font-size: 22rpx;
}
.item{
  background-color: #fff;
  width:100%;
  height: 90rpx;
  line-height: 90rpx;
  padding:0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #E9E9E9;
}

.item .right .star{
  width: 32rpx;
  height: 32rpx;
  text-align: center;
}
.item .right .arrow{
  width: 12rpx;
  height: 22rpx;
  margin-bottom:1px;

}
.items{
  height:120rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #E9E9E9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.items .home{
  font-size: 32rpx;
  color:#666;
}
.items .active{
  color:#fff;
  background: #BA8E52;
  border-radius: 20px;
  padding:10rpx 26rpx 10rpx;
}
.items .intro{
  font-size: 22rpx;
  color:#666;
}
.items .time{
  font-size:26rpx;
  color:#E2231A;
}
.items .order{
  font-size: 26rpx;
  color:#fff;
  background-color: #BA8E52;
  border-radius: 20px;
  padding:12rpx 28rpx 12rpx;
}
.items .member{
  font-size: 24rpx;
  color:#BA8E52;
}
