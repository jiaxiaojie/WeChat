<view style='display: flex;justify-content: center;'>
  <view class='header'>
    <image class='img'
      src='../../image/avatar.jpg'></image>
    <view class='info'>
      <view style='font-size:32rpx;'>打造温馨舒适的住房体验</view>
      <view style='font-size:26rpx; color:#666; margin-top:22rpx;'><text class="iconfont icon-wxbdingwei">{{begindate}}</text>苏州市观前街旧学前88号</view>
    </view>
  </view>
</view>

<!--列表  -->
<view class='tab'>
  <view class='item' bindtap='checkInTime' >
    <image src='../../image/time.png'></image>
    <view>分时信息</view>
  </view>
   <view class='item' bindtap='viewCoupons'>
    <image src='../../image/card.png'></image>
    <view>卡券</view>
  </view>
  <view class='item' bindtap='viewMember'>
    <image src='../../image/member.png'></image>
    <view>会员</view>
  </view>
</view>

<!--入住预定  -->
<view class='reverse'>
  <view bindtap='dateSelect'>
    <view class='method' style='text-align:center;'>入住</view>
     <view class='date'>{{checkInDate}} {{weekDay}}</view> 
  </view>
  <view class='advance' bindtap='bookRoom'>预定</view>
</view>