.header{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding:34rpx 30rpx 44rpx 34rpx;
  font-size: 24rpx;
  color:#999;
}
.header .title{
  font-size: 28rpx;
  color: #333;
}
.header .info{
  display: flex;
  justify-content:space-between;
  margin-top:20rpx;
  margin-bottom:10rpx;
}
.content{
  background-color: #fff;
  font-size: 26rpx;
  color:#666;
}
.content .item{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #D9D9D9;
  padding:0 30rpx;
  box-sizing: border-box;
  display: flex;
}
.content .items{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btn-numbox,.count{
  height: 90rpx;
}
.count .num-jian,.count .num-jia,.count .input-num{
  display: inline-block;
  height: 56rpx;
  width:48rpx;
  border:1rpx solid #f0f0f0;
  line-height: 56rpx;
  text-align: center;
  float: left;
  margin-top: 14rpx;
  font-size: 30rpx;
  cursor: pointer;
}
.count .input-num{
  width:80rpx;
}
.item .cnt{
  margin-left:60rpx;
  margin-top:22rpx;
  color:#000;
}
.item .arrow{
  width: 12rpx;
  height: 22rpx;
  margin-left: 410rpx;
  
}
@font-face {
  font-family: 'iconfont';  
  src: url('//at.alicdn.com/t/font_551568_lyoz2ldozvtsatt9.eot');
