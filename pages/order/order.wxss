  url('//at.alicdn.com/t/font_551568_lyoz2ldozvtsatt9.woff') format('woff'),
  url('//at.alicdn.com/t/font_551568_lyoz2ldozvtsatt9.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_551568_lyoz2ldozvtsatt9.svg#iconfont') format('svg');
}

.note{
  display: flex;
  padding:28rpx 26rpx 0 22rpx;
  box-sizing: border-box;
}
.note .info{
  font-size: 22rpx;
  color: #999;
  margin-left:5rpx;
}

